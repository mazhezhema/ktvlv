{
  "version": 3,
  "configurePresets": [
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_ninja2",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "KTV_USE_LV_DRIVERS": "OFF"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_ninja2_debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "KTV_USE_LV_DRIVERS": "OFF"
      }
    }
  ]
}


